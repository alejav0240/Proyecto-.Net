@inject LbroService libroService

<div class="input-group my-3">
    <input type="text" class="form-control" placeholder="Ingrese titulo del libro" aria-label="Recipient's username with two button addons"
           @bind-values="nombretitulo"
           @bind-values:event="oninput">

    <button @onclick="buscar" class="btn btn-outline-dark" type="button">Buscar</button>
    <button @onclick="limpiar" class="btn btn-outline-danger" type="button">Limpiar</button>
</div>

@code {
    private string nombretitulo { get; set; } = string.Empty;

    private async Task buscar()
    {
        await libroService.notificarBuscarqueda(nombretitulo);
    }

    private async Task limpiar()
    {
        nombretitulo = string.Empty;
        await libroService.notificarBuscarqueda(nombretitulo);
    }

}
