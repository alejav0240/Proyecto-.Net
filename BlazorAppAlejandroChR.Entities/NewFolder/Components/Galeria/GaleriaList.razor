@inject EventoService eventoService
@inject UtilService utilService

<div class="container">
    <div class="row">
        @foreach (var evento in lista)
        {
            <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12">
                <div class="card h-100" style="width: 18rem;">
                    <img style="width:100%; height:200px" src="@utilService.obtenerImagen(evento.imagen)" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@evento.nombre</h5>
                        <p class="card-text">@evento.nombreTipoEvento - @evento.nombreCliente</p>
                        <div class="text-center mt-auto">
                            <button @onclick="(() => eventoService.descargar(evento.idEvento, evento.nombrearchivo))"
                                    class="btn btn-success">
                                Descargar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code {
    public List<EventoListCLS> lista { get; set; } = new List<EventoListCLS>();
    protected override async Task OnInitializedAsync()
    {
        lista = await eventoService.listarEventos();
    }

}